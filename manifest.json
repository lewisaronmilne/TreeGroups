{
    "manifest_version": 3,
    "name": "Tree Groups",
    "version": "0.1",

    "browser_specific_settings":
	{
		"gecko":
		{
			"id": "treegroups@lewisaronmilne"
		}
    },

    "description": "Adds sidebar tabs that are organised into trees and groups",

    "icons":
    {
        "48": "img/tg.svg"
    },

    "action":
    {
        "default_icon": "img/tg.svg"
    },

    "sidebar_action":
    {
        "default_title": "Tree Groups",
        "default_panel": "html/sidebar.html",
        "default_icon": "img/tg.svg"
    },

	"background":
	{
		"scripts": ["js/background.js"]
	}
}
